<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="-2dp"
        android:right="-2dp"
        android:top="-2dp"> 
        <shape> 
            <!-- 背景颜色 --> 
            <solid android:color="#f2f2f2" /> 
            <!-- 控制边界线颜色和大小 --> 
            <stroke
                android:width="0.2dp"
                android:color="#999999" /> 
            <!-- 设置边距 --> 
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item> 
</layer-list>